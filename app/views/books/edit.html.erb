<body>
  <% if @book.errors.any? %>
    <div class="error-box">
      <h2 class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul class="error-ul">
        <% @book.errors.full_messages.each do |message| %>
          <li class="error-li"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 

  <div class="flash">
    <%= flash[:notice] %>
  </div>

  <h1>Editing Book</h1>
  <%= form_with model: @book do |f| %>

    <div class="field">
      <label>Title</label>
      <div class="title"><%= f.text_field :title %></div>
    </div>

    <div class="errors">Body</div>
    <div class="body"><%= f.text_area :body %></div>

    <div class="action">
      <%= f.submit "Update Book" %>
    </div>

  <% end %>

  <%= link_to "Show", "/books/#{@book.id}" %>
  |
  <%= link_to "Back", "/books" %>

</body>